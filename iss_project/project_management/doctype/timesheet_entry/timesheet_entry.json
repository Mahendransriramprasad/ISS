{
  "doctype": "DocType",
  "name": "Timesheet Entry",
  "module": "project_management",
  "custom": true,
  "fields": [
    { "fieldname": "user", "label": "User", "fieldtype": "Link", "options": "User", "reqd": 1 },
    { "fieldname": "task", "label": "Task", "fieldtype": "Link", "options": "Task", "reqd": 1 },
    { "fieldname": "project", "label": "Project", "fieldtype": "Link", "options": "Project Master" },
    { "fieldname": "hours", "label": "Hours", "fieldtype": "Float", "reqd": 1 },
    { "fieldname": "work_date", "label": "Work Date", "fieldtype": "Date", "reqd": 1 },
    { "fieldname": "is_billable", "label": "Billable", "fieldtype": "Check", "default": 1 },
    {
      "fieldname": "status",
      "label": "Status",
      "fieldtype": "Select",
      "options": "Draft\nPending Approval\nApproved\nRejected",
      "default": "Draft"
    }
  ],
  "permissions": [
    { "role": "Developer", "create": 1, "read": 1, "write": 1 },
    { "role": "Project Manager", "read": 1, "write": 1 },
    { "role": "HR & Finance", "read": 1 },
    { "role": "Management", "read": 1 }
  ],
  "track_changes": 1
}
